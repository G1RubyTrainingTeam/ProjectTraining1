<% array_course.each do |course| %>
  <tr>
    <td class="col-sm-8">
      <%= link_to course_path(course) do %>
        <%= image_tag course.thumbnail.url, class: "pull-left img-items-cart" %>
        <h4><%= course.name %></h4>
      <% end %>
      <%= link_to course.user.name, user_path(course.user) %>
    </td>
    <td class="col-sm-2">
      <b><%= number_to_currency course.price_sale, locale: :vi %></b>
      <% if course.percent_sale > 0 %>
        <span class="price-course"><%= number_to_currency course.price, locale: :vi %></span>
      <% end %>
    </td>
    <td class="col-sm-2">
      <%= link_to destroy_cart_item_not_login_path(course_id: course.id), method: :delete, data: {confirm: t("cart_items.confirm_delete")} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </td>
  </tr>
<% end %>

<tr>
  <td></td>
  <td><h3><%= t "cart_items.total_price" %></h3></td>
  <td><h3><strong><%= number_to_currency total_price, locale: :vi %></strong></h3></td>
</tr>
