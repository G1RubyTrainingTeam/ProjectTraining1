<div class="row">
  <div class="col-md-offset-3 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= yield(:button_text) %> <%= t "lesson.new.new_lesson" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for([:admin, @course, @lesson]) do |f| %>
              <%= render "shared/error_messages", object: f.object %>
              <form role="form">
                <%= f.input :course_id, as: :hidden %>
                <div class="form-group">
                  <div class="form-group">
                    <%= f.input :name, label: t("lesson.index.lesson_name"),
                      placeholder: t("lesson.new.enter_name"),
                      input_html: { class: "form-control" } %>
                  </div>
                  <div class="form-group">
                    <%= f.file_field :video_url, label: t(".video_url") %>
                  </div>
                  <%= f.submit t("lesson.new.submit"), class: "btn btn-success" %>
                </div>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
