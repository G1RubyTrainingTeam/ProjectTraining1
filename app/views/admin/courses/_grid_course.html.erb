<% @courses.each do |course| %>
  <tr class="odd gradeX">
    <td><%= link_to course.name, admin_course_lessons_path(course) %>
    <td><%= link_to course.user_name, admin_user_path(course.user) %></td>
    <td><%= link_to course.category_name, admin_category_path(course.category) %></td>
    <td><%= course.description %></td>
    <td class="text-center"><%= course.rate_average %></td>
    <td><%= course.created_at.strftime("%m/%d/%Y") %></td>
    <td>
      <%= image_tag course.thumbnail.url, class: "img-rounded img-thumb-size" %>
    </td>
    <td>
      <%= link_to edit_admin_course_path(course), class: "btn btn-success" do %>
        <i class="fa fa-pencil"></i> <%= t "button.edit"%>
      <% end %>
      <% if can? :destroy, course %>
        <%= link_to admin_course_path(course), method: :delete,
          data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i> <%= t "button.delete"%>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
