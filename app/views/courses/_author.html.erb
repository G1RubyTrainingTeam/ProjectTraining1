<div class="row">
  <div class="well well-sm">
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <img src="<%= @course.user_avatar %>" class="img-circle img-author" />
      </div>
      <div class="col-sm-6 col-md-8">
        <h4><%= @course.user_name %></h4>
        <small>
          <cite title="San Francisco, USA"><%= @course.user_provider %>
            <i class="glyphicon glyphicon-map-marker"></i>
          </cite>
        </small>
        <p>
          <i class="glyphicon glyphicon-envelope"></i><%= @course.user_email %>
          <br />
          <i class="glyphicon glyphicon-globe"></i><a href="http://www.google.com">google.com</a>
          <br />
          <i class="glyphicon glyphicon-gift"></i>June 02, 1988</p>
        <div class="btn-group">
          <button type="button" class="btn btn-primary">Social</button>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span><span class="sr-only">Social</span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Twitter</a></li>
            <li><a href="<%= @course.user_email %>">Gmail +</a></li>
            <li class="divider"></li>
            <li><a href="#">Github</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
