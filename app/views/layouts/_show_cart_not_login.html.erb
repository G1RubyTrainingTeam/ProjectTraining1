<%= link_to "#" do %>
  <i class="fa fa-shopping-cart">
    <span class="cart-notice"><%= array_course.count %></span>
  </i>
<% end %>
<% if array_course.count == 0 %>
  <ul class="cart-index"><b><%= link_to t("cart_items.index.no_course"), "#" %></b></ul>
<% else %>
  <ul>
    <div class="many-items">
      <% array_course.each do |course|%>
        <li>
          <%= link_to course_path course do %>
            <%= image_tag course.thumbnail.url, class: "img-cart-home" %>
            <b><%= number_to_currency course.price_sale, locale: :vi %></b><br>
            <%= course.name %>
          <% end %>
        </li>
      <% end %>
    </div>
    <li>
      <%= link_to "#" do %>
        <b><%= t "cart_items.total_price" %>
          <%= number_to_currency total_price, locale: :vi %></b>
      <% end %>
    </li>
    <li>
      <%= link_to t("cart_items.btn_show_cart"), cart_items_path, class: "btn btn-success btn-cart-detail" %>
    </li>
  </ul>
<% end %>
